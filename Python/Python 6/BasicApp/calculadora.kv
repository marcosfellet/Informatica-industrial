#:kivy 1.11.1

<CustButton@Button>:
    font_size: 32

<Calculadora_Grid>:
    id: calculadora
    display: display  # Referencia o id display
    rows: 6
    padding: 10
    spacing: 10
    
    BoxLayout:
        # Configurando os displays de bot√µes
        TextInput:
            id: display
            font_size: 32
            multiline: False  
    
    BoxLayout:
        # Fazendo com que as entradas sejam atualizadas
        spacing: 10
        CustButton:
            text: "7"
            on_press: display.text += self.text
        CustButton:
            text: "8"
            on_press: display.text += self.text
        CustButton:
            text: "9"
            on_press: display.text += self.text
        CustButton:
            text: "+"
            on_press: display.text += self.text
 
    BoxLayout:
        spacing: 10
        CustButton:
            text: "4"
            on_press: display.text += self.text
        CustButton:
            text: "5"
            on_press: display.text += self.text
        CustButton:
            text: "6"
            on_press: display.text += self.text
        CustButton:
            text: "-"
            on_press: display.text += self.text
 
    BoxLayout:
        spacing: 10
        CustButton:
            text: "1"
            on_press: display.text += self.text
        CustButton:
            text: "2"
            on_press: display.text += self.text
        CustButton:
            text: "3"
            on_press: display.text += self.text
        CustButton:
            text: "*"
            on_press: display.text += self.text
    
    BoxLayout:
        spacing: 10
        CustButton:
            text: "AC"
            on_press: display.text = ""
        CustButton:
            text: "0"
            on_press: display.text += self.text
        CustButton:
            text: "="
            on_press: root.calcule(display.text)
        CustButton:
            text: "/"
            on_press: display.text += self.text
    
    BoxLayout:
        CustButton:
            font_size: 20
            text: "Scientific calculator"
            on_press: display.text = ""